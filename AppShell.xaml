<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MyShopApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MyShopApp"
    xmlns:Views="clr-namespace:MyShopApp.Views"
    xmlns:ItemViews="clr-namespace:MyShopApp.Views.ItemViews"
    Shell.FlyoutBehavior="Flyout"
    Title="MyShopApp">

    <Shell.FlyoutHeaderTemplate>
        <DataTemplate>
            <Grid BackgroundColor="Black"
                  HeightRequest="50">
                <Image Aspect="AspectFill"
                       Source="unassigned.png"
                       Opacity="0.6" />
                <Label Text="MyShopApp"
                       TextColor="White"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center" />
            </Grid>
        </DataTemplate>
    </Shell.FlyoutHeaderTemplate>

    <FlyoutItem Title="MyShopApp" FlyoutDisplayOptions="AsMultipleItems" >
        <!--<ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />-->

        <ShellContent
        Title="Landing"
        ContentTemplate="{DataTemplate Views:Landing}"
        Route="Landing" 
        
            />
    </FlyoutItem>



</Shell>
